        <h1 style="margin: 10px 0 16px;">Profil</h1>
        <div class="card">
            <div class="grid">
                <div class="row">
                    <div class="label">Ism</div>
                    <div id="pfName">—</div>
                </div>
                <div class="row">
                    <div class="label">Email</div>
                    <div id="pfEmail">—</div>
                </div>
                <div class="row">
                    <div class="label">Rol</div>
                    <div id="pfRole">—</div>
                </div>
                <div id="pfMeta" class="muted"></div>
            </div>
            <div class="actions">
                <button id="logoutBtn" class="secondary">Chiqish</button>
            </div>
        </div>
        <p class="muted" style="margin-top:14px;">Profil ma’lumotlari brauzeringizda saqlangan. Agar tizimga backend orqali kirilgan bo‘lsa, ma’lumotlar /api/profile dan olinadi.</p>
    </div>
    <script>
        (function(){
            // Theme from index if used
            try {
                var theme = localStorage.getItem('theme') || 'light';
                document.documentElement.setAttribute('data-theme', theme);
            } catch(e) {}

            var nameEl = document.getElementById('pfName');
            var emailEl = document.getElementById('pfEmail');
            var roleEl = document.getElementById('pfRole');
            var metaEl = document.getElementById('pfMeta');
            var logoutBtn = document.getElementById('logoutBtn');

            function renderLocal() {
                var user = null;
                try { user = JSON.parse(localStorage.getItem('ketmon_user') || 'null'); } catch(e) {}
                if (user && (user.name || user.email)) {
                    nameEl.textContent = user.name || '—';
                    emailEl.textContent = user.email || '—';
                    roleEl.textContent = (user.role || 'customer');
                    metaEl.textContent = '';
                    return true;
                }
                return false;
            }

            function renderRemote(token) {
                return fetch('/api/profile', {
                    headers: { 'Authorization': 'Bearer ' + token }
                }).then(function(r){
                    if (!r.ok) throw new Error('Auth required');
                    return r.json();
                }).then(function(p){
                    nameEl.textContent = p.name || '—';
                    emailEl.textContent = p.email || '—';
                    roleEl.textContent = p.role || '—';
                    metaEl.textContent = '';
                }).catch(function(){
                    if (!renderLocal()) {
                        metaEl.textContent = 'Profil topilmadi. Iltimos, tizimga kiring.';
                    }
                });
            }

            (function init(){
                var rendered = renderLocal();
                var token = null;
                try { token = localStorage.getItem('ketmon_token') || ''; } catch(e) {}
                if (token) {
                    renderRemote(token);
                } else if (!rendered) {
                    metaEl.textContent = 'Profil topilmadi. Iltimos, tizimga kiring.';
                }
            })();

            logoutBtn.addEventListener('click', function(){
                try {
                    localStorage.removeItem('ketmon_user');
                    localStorage.removeItem('ketmon_token');
                } catch(e) {}
                window.location.href = 'index.html';
            });
        })();
    </script>
</body>
